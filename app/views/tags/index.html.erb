<%= render "shared/page_title", title: "Avaliable tags" %>

<div align="center">
  <%= will_paginate %>
  <% @tags.each do |tag| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to tag.name.capitalize, tag_path(tag) %></li>
          <li><small><%= pluralize(tag.products.count, "product") if tag.products %></small></li>
          <% if user_logged_in? && current_user.admin? %>
            <li><%= link_to "Edit this tag", edit_tag_path(tag) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>