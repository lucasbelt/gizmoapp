<%= render 'shared/page_title', title: @product.name %>

<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>Steps: </strong></h4>
  <hr />
  <%= simple_format(@product.description) %>
  <hr />
  <div class="pull-right">
    <p class="center">
      <em>Created by:</em>
    </p>
    <p class="center">
      <%= link_to gravatar_user(@product.user), user_path(@product.user) %>
    </p>
    <p class="center">
      <small><%= @product.user.username.capitalize %></small>
      <div class="pull-right">
        Created <%= time_ago_in_words(@product.created_at) %> ago
      </div>
    </p>
  </div>
  <div class="recipe-actions">
  <% if user_logged_in? && (current_user == @product.user || current_user.admin?) %>
    <%= link_to "Edit this Product", edit_product_path(@product), class: "btn btn-xs btn-warning" %>
    <%= link_to "Delete this Product", product_path(@product), method: :delete,
                                      data: {confirm: "Are you sure, you want to delete this product?"},
                                      class: "btn btn-xs btn-danger" %>
  <% end %>
    <%= link_to "Return to products listing", products_path, class: "btn btn-xs btn-primary" %>
  </div>
</div>