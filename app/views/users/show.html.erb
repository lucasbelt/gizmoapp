<%= render 'shared/page_title', title: "User #{@user.username}'s profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_user(@user, size: 150) %>
  </div>
</div>
<% if @user.products.count != 0 %>
  <h4 class="center"><%= @user.username %>'s products</h4>
  <%= render 'products/product', obj: @user.products %>
<% else %>
  <h4 class="center">No products yet!</h4>
<% end %>