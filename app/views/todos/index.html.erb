<h1>Index Todo</h1>

<p>
  <%= link_to "Create a Todo", new_todo_path %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
  <% @todos.each do |todo| %>
  <tr>
    <td><%= todo.name %></td>
    <td><%= todo.description %></td>
    <td>
      <%= link_to "Edit", edit_todo_path(todo) %>
      <%= link_to "Show", todo_path(todo) %>
    </td>
  </tr>
  <% end %>
</table>